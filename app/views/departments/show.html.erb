<!DOCTYPE html>
<html>
<head>
    <%= javascript_pack_tag 'date' %>
    <%= javascript_pack_tag 'select' %>
</head>
<body>
    <div class="top">
        <a id="date"></a>
        <button class="remove-shift">Remove Shift</button>
        <button class="add-shift">Add Shift</button>
    </div>
    <table>
        <thead>
            <tr>
                <th><input type="checkbox" id="select-all">Select All</th>
                <th>Entry Time</th>
                <th>Exit Time</th>
                <th>Shift hours</th>
                <th>Number of Employees</th>
                <th>Manage</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td><input type="checkbox"></td>
                <td>9.00</td>
                <td>16.00</td>
                <td>7</td>
                <td>40</td>
                <td>More info</td>
            </tr>
        </tbody>
    </table>
</body>
</html>