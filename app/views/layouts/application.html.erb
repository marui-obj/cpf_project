<!DOCTYPE html>
<html>
  <head>
    <title>CpfProject</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag params[:controller], media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class = "header">
      <%= link_to 'Home'.html_safe,  departments_path%>
      <div class = "user">
        <div class = "name">
          <% if @current_user %>       
            <%= @current_user.username %>
          <% end %>
          <% if logged_in? %>
            <%= link_to '<button>Sign Out</button>'.html_safe, '/logout', method: :delete %>
          <% end %>
        </div>
      </div>
    </div>
    <%= yield %>
    <%= javascript_pack_tag 'date' %>
    <%= javascript_pack_tag 'select' %>
  </body>
</html>
